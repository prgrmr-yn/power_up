<h1>Available powerbanks</h1>
<%= link_to 'Add a powerbank', new_powerbank_path %>
<ul>
  <% @powerbanks.each do |powerbank| %>
    <hr>
    <% @pow = powerbank.availability ? '✅' : '❌' %>
    <h3><li><%= powerbank.name%> <%= @pow %></li></h3>

    <li><%= powerbank.description %></li>
    <li><%= powerbank.price %></li>
    <% unless powerbank.accessories == nil || powerbank.accessories == "" %>
      <li><%= powerbank.accessories %></li>
    <% end %>
    <% if powerbank.user == current_user %>
      <%= link_to 'edit', edit_powerbank_path(powerbank) %>
      <%= link_to 'delete', powerbank_path(powerbank), data: { turbo_confirm: 'Are you sure', turbo_method: :delete } %>
    <% end %>
  <% end %>
  <hr>
</ul>
